<!-- SIDEBAR: Left vertical column with icons -->
<div class="landing-sidebar">
    <div class="sidebar-header" style="display:none;">
        <img id="help_image_seal" src="assets/images/SealCircle.png" alt="logo" style="width:52px;height:52px;border-radius:8px;"/>
        <div id="help_updateAvailableTooltip" style="display:none;"><%- lang('landing.updateAvailableTooltip') %></div>
    </div>

    <div class="sidebar-icons" style="padding-top: 60px;">
        <button class="sidebar-icon" id="helpSidebarHome" title="Home" onclick="switchView(getCurrentView(), VIEWS.landing)">
            <svg width="44" height="44" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <polyline points="9 22 9 12 15 12 15 22" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        </button>
        <button class="sidebar-icon" id="helpSidebarCGU" title="Shop" onclick="switchView(getCurrentView(), VIEWS.cgu)">
            <img src="assets/images/icons/shop.svg" alt="Shop" style="width:44px;height:44px;"/>
        </button>
        <button class="sidebar-icon" id="helpSidebarWheel" title="Wheel" onclick="switchView(getCurrentView(), VIEWS.wheel)">
            <img src="assets/images/wheel-icon.svg" alt="Wheel" style="width:44px;height:44px;"/>
        </button>
        <a href="https://vanylaplus.fr" class="sidebar-icon" id="helpSidebarGlobe" title="Servers" target="_blank" rel="noopener noreferrer" style="display:none">
